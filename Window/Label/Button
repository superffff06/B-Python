////////BASIC TKINTER- window,label,button
import math
import time
import sys
import random
import os
import shutil
import functools
import operator
import threading
from tkinter import *
from messages import hello,sum
from classes import Information
from multiprocessing import Process,cpu_count

count = 0
count = int(count)
def Improve_score():
      global count
      count += 1
def Get_score():
      print(str(count))
labeltext = input()
window = Tk() # instantiate an instance of a window
window.geometry ("420x500") # changes size of window 
window.title("Alex_Radu_GUI")
icon = PhotoImage(file='KFC.png')
window.iconphoto(True,icon)
window.config(background="#b67f08")
my_photo = PhotoImage(file='crab(1).png')
label = Label(window,
              text=labeltext,
              font=('Arial', 30, 'italic'),
              fg='#e43003',
              background='#030203',
              relief=RAISED,
              bd=10,
              image=my_photo,
              compound='bottom')
label.place(x=100,y=0)
button1 = Button(window,
                 text="Improve my score",
                 height=20,
                 width=20,
                 command=Improve_score)
button2 = Button(window,
                 text="Get my score",
                 height=20,
                 width=20,
                 command=Get_score)
button2.place(x=200, y=200)
button1.place(x=0, y=200)
window.mainloop() # place window on screen, listen for events
