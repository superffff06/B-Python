///////////// drag labels using same function for more ////////////////////
import math
import time
import sys
import random
import os
import shutil
import functools
import operator
import threading
from tkinter import *
from messages import hello,sum
from classes import Information
from multiprocessing import Process,cpu_count
from tkinter import messagebox
from tkinter import colorchooser
from tkinter import filedialog
from tkinter import ttk


def drag_start(event):
    Widget=event.widget
    Widget.startX=event.x
    Widget.startY=event.y
def drag_motion(event):
   Widget=event.widget
   xt=Widget.winfo_x() - Widget.startX + event.x
   yt=Widget.winfo_y() - Widget.startY + event.y
   Widget.place(x=xt,y=yt)
window = Tk()
window.geometry("900x900")
label1 = Label(window,
              text="Drag me",
              font=("Arial",10),
              bg="#bd1f0c",
              fg="black",
              width=15,
              height=15,)
label2 = Label(window,
              text="Drag me not",
              font=("Arial",10),
              bg="blue",
              fg="black",
              width=15,
              height=15,)   
label1.place(x=100,y=100)
label1.bind("<Button-1>",drag_start)
label1.bind("<B1-Motion>",drag_motion)
label2.place(x=500,y=500)
label2.bind("<Button-1>",drag_start)
label2.bind("<B1-Motion>",drag_motion)
window.mainloop()
